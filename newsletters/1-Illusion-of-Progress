    <div class="grid" id="newsletter-container">
        <!-- Dynamic content will be inserted here -->
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            fetch("https://api.github.com/repos/rakshak-one/Rakshak.one/contents/newsletters")
                .then(response => response.json())
                .then(data => {
                    let newsletterContainer = document.getElementById("newsletter-container");
                    data.forEach(file => {
                        if (file.name !== ".gitkeep") {
                            let cleanTitle = file.name.replace(/[-_]/g, ' ').replace(/\.html/, '').replace(/\d+/, '').trim();
                            let imagePath = `images/${file.name.replace(/\.html/, '.jpg')}`;
                            let card = document.createElement("div");
                            card.classList.add("card");
                            card.innerHTML = `
                                <img src="${imagePath}" alt="${cleanTitle}">
                                <h2>${cleanTitle}</h2>
                                <a href="newsletters/${file.name}" target="_blank">Read More</a>
                            `;
                            newsletterContainer.appendChild(card);
                        }
                    });
                })
                .catch(error => console.error("Error fetching newsletters:", error));
        });
    </script>
